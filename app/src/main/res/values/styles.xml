<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--// Fade Transiton-->
    <style name="Fade_Transition">
        <item name="android:windowEnterAnimation">@anim/transtion_slide_in</item>
        <item name="android:windowExitAnimation">@anim/transition_slide_out</item>
    </style>


    <!--// Slide Transiton-->
    <style name="Slide_Transition">
        <item name="android:windowEnterAnimation">@anim/transition_slide_right</item>
        <item name="android:windowExitAnimation">@anim/transition_slide_left</item>
    </style>

    <!--// Slide Transiton-->
    <style name="Slide_Transition_UP_Donw">
        <item name="android:windowEnterAnimation">@anim/transition_slide_up</item>
        <item name="android:windowExitAnimation">@anim/transition_slide_down</item>
    </style>


</resources>
